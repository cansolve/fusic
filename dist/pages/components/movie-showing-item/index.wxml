<block>
    <view>
        <view class="list" wx:key="id" wx:for="{{data}}" wx:for-item="item" wx:for-index="_anonIdx">
            <view class="list-main">
                <view class="list-main-left">
                    <image class="list-main-image" src="{{item.img}}"></image>
                </view>
                <view class="list-main-right">
                    <view class="list-item"><text class="title">{{item.titleCn}}</text>
                        <block wx:if="{{item.ratingFinal > 0}}"><text class="rate">{{item.ratingFinal}}分</text>
                        </block>
                    </view>
                    <block wx:if="{{item.ratingFinal > 0}}">
                        <view class="list-item"><text class="subTitle">{{item.commonSpecial}}</text>
                        </view>
                    </block>
                    <block wx:if="{{item.ratingFinal <= 0}}">
                        <view class="list-item-center"><text><text class="count">{{item.wantedCount}}</text><text>人想看</text></text><text class="divide">-</text><text>{{item.type}}</text>
                        </view>
                    </block>
                    <view class="list-item"><text class="actor">{{item.actorName1}}/ {{item.actorName2}}</text><text class="tickets">购票</text>
                    </view>
                </view>
            </view>
        </view>
    </view>
</block>