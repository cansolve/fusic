<block>
    <view>
        <view class="list" wx:key="id" wx:for="{{data}}" wx:for-item="item" wx:for-index="_anonIdx">
            <view class="list-main">
                <view class="list-main-left">
                    <image class="list-main-image" src="{{item.image}}"></image>
                </view>
                <view class="list-main-right">
                    <view class="list-item"><text class="title">{{item.title}}</text>
                    </view>
                    <view class="list-item-center"><text><text class="count">{{item.wantedCount}}</text><text>人想看</text></text><text class="divide">-</text><text>{{item.type}}</text>
                    </view>
                    <view class="list-item">
                        <block wx:if="{{item.actor1}}"><text class="actor">{{item.actor1}}/ {{item.actor2}}</text>
                        </block>
                        <block wx:if="{{!item.actor1}}"><text class="actor">{{item.director}}</text>
                        </block>
                        <block wx:if="{{item.isTicket}}">
                            <view class="wantSee operation">
                                <at-icon style="padding: 0 3px;" __triggerObserer="{{ _triggerObserer }}" value="heart" size="20" color="lightcoral"></at-icon><text>想看</text>
                            </view>
                        </block>
                        <block wx:if="{{!item.isTicket}}">
                            <view class="sell operation"><text>预售</text>
                            </view>
                        </block>
                    </view>
                </view>
            </view>
        </view>
    </view>
</block>